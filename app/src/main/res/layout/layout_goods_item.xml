<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dp6"
                android:background="@drawable/item_recycler_bg">

    <ImageView
        android:id="@+id/shop_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp120"
        android:contentDescription="@string/goods_phone"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/shop_tv_goodsName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/shop_img"
        android:text="@string/goods_name"/>

    <TextView
        android:id="@+id/shop_tv_goodsPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/shop_img"
        android:layout_below="@id/shop_img"
        android:gravity="end"
        android:text="@string/goods_name"/>
</RelativeLayout>